@page "/product-category"

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (productCategoryViewModels == null)
{
    <Loading />
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
                <th>Thao tacs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in productCategoryViewModels)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Gender</td>
                    <td>
                        <a href="/product-category/detail/@item.Id">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}